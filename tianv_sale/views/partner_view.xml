<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>
        <!--View Inherit-->
        <record id="view_partner_form_inherit_tianv_project" model="ir.ui.view">
            <field name="name">res.partner.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//h1[1]" position="after">
                    <h2>
                        <field name="number" placeholder="Partner Number"
                               attrs="{'invisible': [('is_company','=', True),('parent_id', '=', False)]}"/>
                    </h2>
                </xpath>
                <xpath expr="//page[@string='Internal Notes']" position="before">
                    <page string="Company Types" attrs="{'invisible': [('is_company','=', False)]}">
                        <group>
                            <group>
                                <field name="company_type"/>
                                <field name="main_category"/>
                                <field name="sector"/>
                                <field name="company_type"/>
                                <field name="product_category"/>
                            </group>
                            <group>
                                <field name="business_license"/>
                                <field name="scale"/>
                                <field name="legal"/>
                                <field name="founded_date"/>
                            </group>
                        </group>
                    </page>
                    <page string="Customer Types" attrs="{'invisible': [('is_company','=', False)]}">
                        <group>
                            <group>
                                <field name="customer_type"/>
                                <field name="source"/>
                                <field name="customer_type2"/>
                                <field name="hot"/>
                            </group>
                            <group>
                                <field name="interest_product"/>
                                <field name="create_date" readonly="1"/>
                                <field name="status"/>
                                <field name="stage_id"/>
                                <field name="relation"/>
                            </group>
                        </group>
                    </page>
                    <page string="Company Introduction" attrs="{'invisible': [('is_company','=', False)]}">
                        <field name="introduction"/>
                    </page>
                </xpath>
                <xpath expr="//field[@name='email']" position="after">
                    <field name="qq"/>
                </xpath>
                <xpath expr="//field[@name='website']" position="after">
                    <field name="hobby" attrs="{'invisible': [('is_company','=', True)]}"/>
                </xpath>

            </field>
        </record>
