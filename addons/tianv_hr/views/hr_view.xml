<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="view_hr_employee_inherit" model="ir.ui.view">
            <field name="name">view.hr.employee.form.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@string='Personal Information']" position="attributes">
                    <attribute name="groups">base.group_hr_user</attribute>
                </xpath>
            </field>
        </record>
    </data>
</openerp>