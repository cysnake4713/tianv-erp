<?xml version="1.0"?>
<openerp>
    <data noupdate="0">
        <record model="res.groups" id="group_insurance_admin">
            <field name="name">可以修改社保记录</field>
            <field name="category_id" ref="base.module_category_attendance"/>
        </record>
    </data>

    <data noupdate="1">
        <record id="rule_tianv_social_insurance_record_employee" model="ir.rule">
            <field name="name">员工只能看自己社保</field>
            <field name="model_id" ref="model_tianv_social_insurance_record"/>
            <field name="groups"
                   eval="[(6,0,[ref('base.group_user')])]"/>
            <field name="domain_force">[('contract.employee_id.user_id','=',user.id)]</field>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="rule_tianv_social_insurance_record_admin" model="ir.rule">
            <field name="name">管理所有社保</field>
            <field name="model_id" ref="model_tianv_social_insurance_record"/>
            <field name="groups"
                   eval="[(6,0,[ref('tianv_insurance.group_insurance_admin')])]"/>
            <field name="domain_force">[(1,'=',1)]</field>
        </record>
    </data>
</openerp>

