<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_social_insurance_wizard_form" model="ir.ui.view">
            <field name="name">view.tianv.social.insurance.wizard.form</field>
            <field name="model">tianv.social.insurance.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group col="4">
                        <field name="start_period"/>
                        <field name="end_period"/>
                    </group>
                    <footer>
                        <button name="button_confirm" type="object" string="确认"/>
                        or
                        <button name="cancel" type="special" string="取消" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_social_insurance_wizard" model="ir.actions.act_window">
            <field name="name">社保记录批量生成</field>
            <field name="res_model">tianv.social.insurance.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record id="view_social_insurance_type_tree" model="ir.ui.view">
            <field name="name">view.tianv.social.insurance.type.tree</field>
            <field name="model">tianv.social.insurance.type</field>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_social_insurance_config_tree" model="ir.ui.view">
            <field name="name">view.tianv.social.insurance.config.tree</field>
            <field name="model">tianv.social.insurance.config</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="employee"/>
                    <field name="computer_code"/>
                    <field name="census_type"/>
                    <field name="personal_total"/>
                    <field name="company_total"/>
                    <field name="total"/>
                </tree>
            </field>
        </record>

        <record id="view_social_insurance_config_search" model="ir.ui.view">
            <field name="name">view.tianv.social.insurance.config.search</field>
            <field name="model">tianv.social.insurance.config</field>
            <field name="arch" type="xml">
                <search>
                    <field name="employee"/>
                    <field name="computer_code"/>
                    <field name="census_type"/>
                    <field name="personal_total"/>
                    <field name="company_total"/>
                    <field name="total"/>
                </search>
            </field>
        </record>

        <record id="view_social_insurance_config_form" model="ir.ui.view">
            <field name="name">view.tianv.social.insurance.config.form</field>
            <field name="model">tianv.social.insurance.config</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button string="根据此配置生成社保记录" name="%(action_social_insurance_wizard)d" type="action"
                                groups="tianv_insurance.group_insurance_admin"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="employee"/>
                            <field name="computer_code"/>
                            <field name="census_type"/>
                            <field name="personal_total"/>
                            <field name="company_total"/>
                            <field name="total"/>
                            <field name="lines">
                                <tree editable="bottom">
                                    <field name="type"/>
                                    <field name="company_part"/>
                                    <field name="personal_part"/>
                                </tree>
                            </field>
                            <field name="active"/>
                        </group>
                        <separator string="生成记录"/>
                        <field name="records">
                            <tree>
                                <field name="period"/>
                                <field name="census_type"/>
                                <field name="personal_total"/>
                                <field name="company_total"/>
                                <field name="total"/>
                            </tree>
                        </field>
                    </sheet>
                    <footer>
                        <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers"/>
                            <field name="message_ids" widget="mail_thread"/>
                        </div>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</openerp>