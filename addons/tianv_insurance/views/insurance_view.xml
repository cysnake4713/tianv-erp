<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_social_insurance_type_tree" model="ir.ui.view">
            <field name="name">view.tianv.social.insurance.type.tree</field>
            <field name="model">tianv.social.insurance.type</field>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_social_insurance_config_tree" model="ir.ui.view">
            <field name="name">view.tianv.social.insurance.config.tree</field>
            <field name="model">tianv.social.insurance.config</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="contract"/>
                    <field name="computer_code"/>
                    <field name="census_type"/>
                    <field name="personal_total"/>
                    <field name="company_total"/>
                    <field name="total"/>
                </tree>
            </field>
        </record>

        <record id="view_social_insurance_config_form" model="ir.ui.view">
            <field name="name">view.tianv.social.insurance.config.form</field>
            <field name="model">tianv.social.insurance.config</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button string="根据此配置生成当月社保记录" name="generate_insurance_record" type="object" groups="tianv_insurance.group_insurance_admin"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="contract"/>
                            <field name="computer_code"/>
                            <field name="census_type"/>
                            <field name="personal_total"/>
                            <field name="company_total"/>
                            <field name="total"/>
                            <field name="lines">
                                <tree editable="bottom">
                                    <field name="type"/>
                                    <field name="company_part"/>
                                    <field name="personal_part"/>
                                </tree>
                            </field>
                            <field name="active"/>
                        </group>
                        <separator string="生成记录"/>
                        <field name="records">
                            <tree>
                                <field name="period"/>
                                <field name="contract"/>
                                <field name="census_type"/>
                                <field name="personal_total"/>
                                <field name="company_total"/>
                                <field name="total"/>
                            </tree>
                        </field>
                    </sheet>
                    <footer>
                        <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers"/>
                            <field name="message_ids" widget="mail_thread"/>
                        </div>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</openerp>