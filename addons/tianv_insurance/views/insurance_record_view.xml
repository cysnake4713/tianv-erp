<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_social_insurance_record_tree" model="ir.ui.view">
            <field name="name">view.tianv.social.insurance.record.tree</field>
            <field name="model">tianv.social.insurance.record</field>
            <field name="arch" type="xml">
                <tree colors="red:state=='processed';green:state=='confirm'">
                    <field name="period"/>
                    <field name="employee"/>
                    <field name="config" groups="tianv_insurance.group_insurance_admin"/>
                    <field name="computer_code"/>
                    <field name="census_type"/>
                    <field name="personal_total"/>
                    <field name="company_total"/>
                    <field name="total"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_social_insurance_record_search" model="ir.ui.view">
            <field name="name">view.tianv.social.insurance.record.search</field>
            <field name="model">tianv.social.insurance.record</field>
            <field name="arch" type="xml">
                <search>
                    <field name="period"/>
                    <field name="employee"/>
                    <field name="config" groups="tianv_insurance.group_insurance_admin"/>
                    <field name="computer_code"/>
                    <field name="census_type"/>
                    <field name="personal_total"/>
                    <field name="company_total"/>
                    <field name="total"/>
                    <field name="state"/>
                </search>
            </field>
        </record>

        <record id="view_social_insurance_record_form" model="ir.ui.view">
            <field name="name">view.tianv.social.insurance.record.form</field>
            <field name="model">tianv.social.insurance.record</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="common_apply" string="确认草稿" type="object" class="oe_highlight"
                                states_editable="{'draft':{'groups':[%(tianv_insurance.group_insurance_admin)d]}}"
                                context="{
                                'state': 'processed',
                                'message_groups': [%(tianv_insurance.group_insurance_approver)d],
                                'message': '有新的社保记录审批请求,请处理',
                                'wechat_code': ['tianv_insurance.wechat_code'],
                                'wechat_template': %(tianv_insurance.message_tianv_insurance)d,
                                }"/>
                        <button name="common_apply" string="审批通过" type="object" class="oe_highlight"
                                states_editable="{'draft':{'groups':[%(tianv_insurance.group_insurance_approver)d]},
                                'processed':{'groups':[%(tianv_insurance.group_insurance_approver)d]}}"
                                context="{
                                'state': 'confirm',
                                }"/>
                        <button name="common_reject" string="重设草稿" type="object"
                                states_editable="{'processed':{'groups':[%(tianv_insurance.group_insurance_admin)d]},
                                        'confirm':{'groups':[%(tianv_insurance.group_insurance_approver)d]},}"
                                context="{
                                'state': 'draft',
                                }"/>

                        <button string="回写当前数据" name="write_back_info" type="object"
                                groups="tianv_insurance.group_insurance_admin"
                                confirm="注意:一经确认,此合同新生成的社保记录会使用此条目数值,请谨慎使用."/>
                        <field name="state" widget="statusbar" readonly="1"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="period"/>
                            <field name="employee"/>
                            <field name="config" groups="tianv_insurance.group_insurance_admin"/>
                            <field name="computer_code"/>
                            <field name="census_type"/>
                            <field name="personal_total"/>
                            <field name="company_total"/>
                            <field name="total"/>
                            <field name="lines">
                                <tree editable="bottom">
                                    <field name="type"/>
                                    <field name="company_part"/>
                                    <field name="personal_part"/>
                                </tree>
                            </field>
                            <field name="active"/>
                        </group>
                    </sheet>
                    <footer>
                        <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers"/>
                            <field name="message_ids" widget="mail_thread"/>
                        </div>
                    </footer>
                </form>
            </field>
        </record>

        <record id="view_social_insurance_record_wizard_form" model="ir.ui.view">
            <field name="name">view.tianv.social.insurance.record.wizard.form</field>
            <field name="model">tianv.social.insurance.record.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div>
                            <p>确认批量审批相关社保记录?</p>
                        </div>
                    </sheet>
                    <footer>
                        <button name="button_confirm" type="object" string="确认"
                                groups="tianv_insurance.group_insurance_admin,tianv_insurance.group_insurance_approver"/>
                        or
                        <button string="取消" special="cancel" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</openerp>