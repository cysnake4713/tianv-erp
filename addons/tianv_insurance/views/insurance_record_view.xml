<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_social_insurance_record_tree" model="ir.ui.view">
            <field name="name">view.tianv.social.insurance.record.tree</field>
            <field name="model">tianv.social.insurance.record</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="period"/>
                    <field name="contract"/>
                    <field name="config"/>
                    <field name="computer_code"/>
                    <field name="census_type"/>
                    <field name="personal_total"/>
                    <field name="company_total"/>
                    <field name="total"/>
                </tree>
            </field>
        </record>

        <record id="view_social_insurance_record_form" model="ir.ui.view">
            <field name="name">view.tianv.social.insurance.record.form</field>
            <field name="model">tianv.social.insurance.record</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button string="回写当前数据" name="write_back_info" type="object"
                                groups="tianv_insurance.group_insurance_admin"
                                confirm="注意:一经确认,此合同新生成的社保记录会使用此条目数值,请谨慎使用."/>
                    </header>
                    <sheet>
                        <group>
                            <field name="period"/>
                            <field name="contract"/>
                            <field name="config"/>
                            <field name="computer_code"/>
                            <field name="census_type"/>
                            <field name="personal_total"/>
                            <field name="company_total"/>
                            <field name="total"/>
                            <field name="lines">
                                <tree editable="bottom">
                                    <field name="type"/>
                                    <field name="company_part"/>
                                    <field name="personal_part"/>
                                </tree>
                            </field>
                            <field name="active"/>
                        </group>
                    </sheet>
                    <footer>
                        <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers"/>
                            <field name="message_ids" widget="mail_thread"/>
                        </div>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</openerp>