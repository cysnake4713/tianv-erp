<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_project_template_tree" model="ir.ui.view">
            <field name="name">view.project.template.tree</field>
            <field name="model">tianv.project.template</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="view_project_template_form" model="ir.ui.view">
            <field name="name">view.project.template.form</field>
            <field name="model">tianv.project.template</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="button_test_available" type="object" string="测试" class="oe_highlight"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                        <group string="参数项">
                            <field name="param_ids" nolabel="1">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="default_proportion" widget="percentage"/>
                                    <field name="default_value"/>
                                </tree>
                            </field>
                        </group>
                        <group string="计算项">
                            <field name="line_ids" nolabel="1">
                                <tree editable="bottom">
                                    <field name="sequence"/>
                                    <field name="name"/>
                                    <field name="type_id"/>
                                    <field name="python_code"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</openerp>