<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_tianv_project_record_search" model="ir.ui.view">
            <field name="name">view.tianv.project.project.record.search</field>
            <field name="model">tianv.project.project.record</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="project_id"/>
                    <field name="partner_id"/>
                    <field name="type_id"/>
                    <field name="price"/>
                    <field name="state"/>
                    <group expand="0" string="Group By">
                        <filter string="Status" domain="[]" context="{'group_by':'state'}"/>
                        <filter string="Partner" domain="[]" context="{'group_by':'partner_id'}"/>
                        <filter string="Type" domain="[]" context="{'group_by':'type_id'}"/>
                        <filter string="Project" domain="[]" context="{'group_by':'project_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="view_tianv_project_record_tree" model="ir.ui.view">
            <field name="name">view.tianv.project.project.record.tree</field>
            <field name="model">tianv.project.project.record</field>
            <field name="arch" type="xml">
                <tree colors="blue:state=='review';grey:state=='finished';red:state in ['cancel','pause']">
                    <field name="name"/>
                    <field name="project_id"/>
                    <field name="partner_id"/>
                    <field name="type_id"/>
                    <field name="price"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record id="view_tianv_project_record_form" model="ir.ui.view">
            <field name="name">view.tianv.project.project.record.form</field>
            <field name="model">tianv.project.project.record</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="common_apply" string="待审批" type="object" class="oe_highlight"
                                states_editable="{'processing':{'users':[user_id]},}"
                                context="{
                                'state': 'review',
                                'message_groups': [%(tianv_project.group_project_manager)d],
                                'message': '员工已经确认任务完成,请审批',
                                'wechat_code': ['tianv.project.project'],
                                'wechat_template': %(tianv_project.message_project_record)d,
                                }"/>
                        <button name="button_review_apply" string="审批通过" type="object" class="oe_highlight"
                                confirm="确定审批通过?"
                                states_editable="{
                                'review':{'groups':[%(tianv_project.group_project_manager)d]},
                                'processing':{'groups':[%(tianv_project.group_project_manager)d]},
                                }"
                                context="{
                                'state': 'finished',
                                'message_users': [user_id],
                                'message': '任务已审批通过',
                                'wechat_code': ['tianv.project.project'],
                                'wechat_template': %(tianv_project.message_project_record)d,
                                }"/>
                        <button name="common_reject" string="恢复" type="object"
                                groups="tianv_project.group_project_manager" states="review,pause,cancel,finished"
                                context="{
                                'state': 'processing',
                                'message_users': [user_id],
                                'message_groups': [%(tianv_project.group_project_manager)d],
                                'message': '任务已恢复',
                                'wechat_code': ['tianv.project.project'],
                                'wechat_template': %(tianv_project.message_project_record)d,
                                }"/>
                        <button name="common_apply" string="取消" type="object"
                                states_editable="{'processing':{'groups':[%(tianv_project.group_project_manager)d]},}"
                                context="{
                                'state': 'cancel',
                                'message_users': [user_id],
                                'message': '任务已经取消',
                                'wechat_code': ['tianv.project.project'],
                                'wechat_template': %(tianv_project.message_project_record)d,
                                }"/>
                        <button name="common_apply" string="暂停" type="object"
                                states_editable="{'processing':{'groups':[%(tianv_project.group_project_manager)d]},}"
                                context="{
                                'state': 'pause',
                                'message_users': [user_id],
                                'message': '任务已暂停',
                                'wechat_code': ['tianv.project.project'],
                                'wechat_template': %(tianv_project.message_project_record)d,
                                }"/>
                        <button name="button_resend_message" string="重发通知" type="object"
                                confirm="确定再次发送通知？"
                                states_editable="{'processing':{'groups':[%(tianv_project.group_project_officer)d]},}"
                                />
                        <field name="state" widget="statusbar" statusbar_visible="processing,review,finished"/>
                    </header>
                    <sheet>
                        <field name="user_id" invisible="1"/>
                        <div>
                            <h1>
                                <field name="name" placeholder="名称" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="project_id" readonly="1"/>
                                <field name="type_id" readonly="1"/>
                                <field name="partner_id" readonly="1"/>
                                <field name="price" readonly="1"/>
                                <field name="move_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="plan_finish_date" states_editable="{
                                'processing':{
                                    'groups':[%(tianv_project.group_project_officer)d]
                                },
                                'review': {'groups':[%(tianv_project.group_project_manager)d]},
                                }"/>
                                <field name="partner_finish_date" states_editable="{
                                'processing':{
                                    'users':[user_id],
                                    'groups':[%(tianv_project.group_project_manager)d]
                                },
                                'review': {'groups':[%(tianv_project.group_project_manager)d]},
                                }"/>
                                <field name="finish_date" states_editable="{
                                'processing':{
                                    'groups':[%(tianv_project.group_project_manager)d]
                                },
                                'review': {'groups':[%(tianv_project.group_project_manager)d]},
                                }"/>
                            </group>
                        </group>
                        <group col="1">
                            <field name="comment"
                                   states_editable="{'processing':{'users':[user_id],'groups':[%(tianv_project.group_project_manager)d]}}"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
    </data>
</openerp>