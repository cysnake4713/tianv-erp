<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_tianv_project_record_tree" model="ir.ui.view">
            <field name="name">view.tianv.project.project.record.tree</field>
            <field name="model">tianv.project.project.record</field>
            <field name="arch" type="xml">
                <tree colors="blue:state=='review';grey:state=='finished';red:state in ['cancel','pause']">
                    <field name="name"/>
                    <field name="project_id"/>
                    <field name="partner_id"/>
                    <field name="type_id"/>
                    <field name="price"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record id="view_tianv_project_record_form" model="ir.ui.view">
            <field name="name">view.tianv.project.project.record.form</field>
            <field name="model">tianv.project.project.record</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="common_apply" string="待审批" type="object" class="oe_highlight"
                                states_editable="{'processing':{'users':[user_id]},}"
                                context="{
                                'state': 'review',
                                }"/>
                        <button name="common_apply" string="审批通过" type="object" class="oe_highlight"
                                confirm="确定审批通过?"
                                states_editable="{
                                'review':{'groups':[%(tianv_project.group_project_manager)d]},
                                'processing':{'groups':[%(tianv_project.group_project_manager)d]},
                                }"
                                context="{
                                'state': 'finished',
                                }"/>
                        <button name="common_reject" string="恢复" type="object"
                                groups="tianv_project.group_project_manager" states="review,pause,cancel,finished"
                                context="{
                                'state': 'processing',
                                }"/>
                        <button name="common_apply" string="取消" type="object"
                                states_editable="{'processing':{'groups':[%(tianv_project.group_project_manager)d]},}"
                                context="{
                                'state': 'cancel',
                                }"/>
                        <button name="common_apply" string="暂停" type="object"
                                states_editable="{'processing':{'groups':[%(tianv_project.group_project_manager)d]},}"
                                context="{
                                'state': 'pause',
                                }"/>
                        <field name="state" widget="statusbar" statusbar_visible="processing,review,finished"/>
                    </header>
                    <sheet>
                        <field name="user_id" invisible="1"/>
                        <div>
                            <h1>
                                <field name="name" placeholder="名称" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="project_id" readonly="1"/>
                                <field name="type_id" readonly="1"/>
                                <field name="move_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="partner_id" readonly="1"/>
                                <field name="price" readonly="1"/>
                                <field name="finish_date" states_editable="{
                                'processing':{
                                    'users':[user_id],
                                    'groups':[%(tianv_project.group_project_manager)d]
                                },
                                'review': {'groups':[%(tianv_project.group_project_manager)d]},
                                }"/>
                            </group>
                        </group>
                        <group>
                            <field name="comment" states_editable="{'processing':{'users':[user_id],'groups':[%(tianv_project.group_project_manager)d]}}"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
    </data>
</openerp>