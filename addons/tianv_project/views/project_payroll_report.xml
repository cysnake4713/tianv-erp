<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_project_payroll_report_search" model="ir.ui.view">
            <field name="name">project.payroll.report.search</field>
            <field name="model">project.payroll.report</field>
            <field name="arch" type="xml">
                <search>
                    <field name="partner_id"/>
                    <field name="period"/>
                    <group expand="0" string="Group By">
                        <filter string="Partner" context="{'group_by':'partner_id'}"/>
                        <filter string="period" name="period" context="{'group_by':'period:month'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="view_project_payroll_report_graph" model="ir.ui.view">
            <field name="name">project.payroll.report.graph</field>
            <field name="model">project.payroll.report</field>
            <field name="arch" type="xml">
                <graph type="pivot">
                    <field name="partner_id" type="row"/>
                    <field name="period" interval="month" type="col"/>
                    <field name="need_paid" type="measure"/>
                    <field name="total_paid" type="measure"/>
                    <field name="left_paid" type="measure"/>
                </graph>
            </field>
        </record>

        <record id="view_project_payroll_report_tree" model="ir.ui.view">
            <field name="name">project.payroll.report.tree</field>
            <field name="model">project.payroll.report</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="period"/>
                    <field name="partner_id"/>
                    <field name="need_paid"/>
                    <field name="total_paid"/>
                    <field name="left_paid"/>
                </tree>
            </field>
        </record>
    </data>
</openerp>