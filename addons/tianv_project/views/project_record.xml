<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_tianv_project_record_tree" model="ir.ui.view">
            <field name="name">view.tianv.project.project.record.tree</field>
            <field name="model">tianv.project.project.record</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="project_id"/>
                    <field name="partner_id"/>
                    <field name="type_id"/>
                    <field name="price"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record id="view_tianv_project_record_form" model="ir.ui.view">
            <field name="name">view.tianv.project.project.record.form</field>
            <field name="model">tianv.project.project.record</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="common_apply" string="待审批" type="object" class="oe_highlight"
                                context="{
                                'state': 'review',
                                }"/>
                        <button name="common_apply" string="审批通过" type="object" class="oe_highlight"
                                context="{
                                'state': 'finished',
                                }"/>
                        <button name="common_reject" string="恢复" type="object" class="oe_highlight"
                                context="{
                                'state': 'processing',
                                }"/>
                        <button name="common_apply" string="取消" type="object"
                                context="{
                                'state': 'cancel',
                                }"/>
                        <button name="common_apply" string="暂停" type="object"
                                context="{
                                'state': 'pause',
                                }"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div>
                            <h1>
                                <field name="name" placeholder="名称"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="project_id"/>
                                <field name="type_id"/>
                            </group>
                            <group>
                                <field name="partner_id"/>
                                <field name="price"/>
                                <field name="finish_date"/>
                            </group>
                        </group>
                        <group>
                            <field name="comment"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
    </data>
</openerp>