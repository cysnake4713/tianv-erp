<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_project_project_tree" model="ir.ui.view">
            <field name="name">view.tianv.project.project.tree</field>
            <field name="model">tianv.project.project</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="code"/>
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="product_id"/>
                    <field name="sign_date"/>
                    <field name="actual_finish_date"/>
                    <field name="partner_id"/>
                    <field name="contract_price"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_project_project_form" model="ir.ui.view">
            <field name="name">view.tianv.project.project.form</field>
            <field name="model">tianv.project.project</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="button_start_process" string="启动" type="object" class="oe_highlight"
                                states="draft" groups="tianv_project.group_project_manager"
                                context="{
                                'state': 'processing',
                                }"/>
                        <button name="common_apply" string="结束" type="object" class="oe_highlight"
                                states="processing" groups="tianv_project.group_project_officer"
                                context="{
                                'state': 'finished',
                                }"/>
                        <button name="common_reject" string="恢复" type="object" class="oe_highlight"
                                states="canceled,pause" groups="tianv_project.group_project_officer"
                                context="{
                                'state': 'processing',
                                }"/>
                        <button name="common_apply" string="取消" type="object"
                                states="processing" groups="tianv_project.group_project_officer"
                                context="{
                                'state': 'canceled',
                                }"/>
                        <button name="common_apply" string="暂停" type="object"
                                states="processing" groups="tianv_project.group_project_officer"
                                context="{
                                'state': 'pause',
                                }"/>
                        <button name="button_reset_draft" string="重设为草稿" type="object" groups="tianv_project.group_project_manager"
                                states="processing,canceled,pause,finished" confirm="注意重设为草稿将清除相关会计分录!"
                                context="{
                                'state': 'draft',
                                }"/>

                        <field name="state" widget="statusbar" statusbar_visible="draft,processing,finished"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="项目名称"
                                       states_editable="{'draft':{'groups':[%(tianv_project.group_project_officer)d]},
                                                        'processing':{'groups':[%(tianv_project.group_project_manager)d]}}"
                                        />
                            </h1>
                            <h2>
                                <field name="code" placeholder="项目编号"
                                       states_editable="{'draft':{'groups':[%(tianv_project.group_project_officer)d]},
                                                        'processing':{'groups':[%(tianv_project.group_project_manager)d]}}"/>
                            </h2>
                        </div>
                        <group>
                            <group string="基本信息">
                                <field name="partner_id"
                                       states_editable="{'draft':{'groups':[%(tianv_project.group_project_officer)d]},
                                                        'processing':{'groups':[%(tianv_project.group_project_manager)d]}}"/>
                                <field name="product_id"
                                       states_editable="{'draft':{'groups':[%(tianv_project.group_project_officer)d]},
                                                        'processing':{'groups':[%(tianv_project.group_project_manager)d]}}"/>
                                <field name="order_id"
                                       states_editable="{'draft':{'groups':[%(tianv_project.group_project_officer)d]},
                                                        'processing':{'groups':[%(tianv_project.group_project_manager)d]}}"/>
                                <field name="sign_date"
                                       states_editable="{'draft':{'groups':[%(tianv_project.group_project_officer)d]},
                                                        'processing':{'groups':[%(tianv_project.group_project_manager)d]}}"/>
                                <field name="plan_finish_date"
                                       states_editable="{'draft':{'groups':[%(tianv_project.group_project_officer)d]},
                                                        'processing':{'groups':[%(tianv_project.group_project_manager)d]}}"/>
                                <field name="actual_finish_date"
                                       states_editable="{'processing':{'groups':[%(tianv_project.group_project_officer)d]}}"/>
                            </group>
                            <group string="合同金额">
                                <field name="contract_price" states_editable="{'draft':{'groups':[%(tianv_project.group_project_officer)d]},
                                                        'processing':{'groups':[%(tianv_project.group_project_manager)d]}}"/>
                                <field name="tax_id" states_editable="{'draft':{'groups':[%(tianv_project.group_project_officer)d]},
                                                        'processing':{'groups':[%(tianv_project.group_project_manager)d]}}"/>
                                <field name="tax_price"/>
                                <field name="actual_price"/>
                            </group>
                        </group>
                        <group class="oe_edit_only">
                            <group col="4">
                                <field name="template_id" states_editable="{'draft':{'groups':[%(tianv_project.group_project_officer)d]},
                                                        'processing':{'groups':[%(tianv_project.group_project_manager)d]}}"/>
                                <button name="button_init_template" type="object" string="使用模板" confirm="会清除现有信息!"
                                        states_editable="{'draft':{'groups':[%(tianv_project.group_project_officer)d]}}"/>
                            </group>
                            <group class="oe_inline">
                            </group>
                        </group>
                        <group string="款项分配">
                            <field name="param_ids" nolabel="1"
                                   states_editable="{'draft':{'groups':[%(tianv_project.group_project_officer)d]},
                                                        'processing':{'groups':[%(tianv_project.group_project_manager)d]}}">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="price"/>
                                </tree>
                            </field>
                        </group>
                        <group string="提成分配">
                            <div class="oe_edit_only">
                                <button name="button_compute_record" type="object" string="再计算提成" confirm="会重新计算提成金额"
                                        states_editable="{'draft':{'groups':[%(tianv_project.group_project_officer)d]},
                                                        'processing':{'groups':[%(tianv_project.group_project_manager)d]}}"/>
                            </div>
                            <newline/>
                            <field name="record_ids" nolabel="1" context="{'template_id': template_id}"
                                   states_editable="{'draft':{'groups':[%(tianv_project.group_project_officer)d]},
                                                        'processing':{'groups':[%(tianv_project.group_project_manager)d]}}">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="template_line_id" domain="[('template_id','=',context.get('template_id'))]"/>
                                    <field name="type_id"/>
                                    <field name="adjustment" widget="percentage"/>
                                    <field name="price"/>
                                    <field name="comment"/>
                                    <field name="partner_id"/>
                                    <field name="finish_date" groups="tianv_project.group_project_manager"/>
                                    <field name="state" readonly="1"/>
                                    <button name="common_apply" string="标记完成" icon="gtk-apply" type="object"
                                            groups="tianv_project.group_project_manager"
                                            states="processing,review"
                                            context="{
                                                'state': 'finished',
                                                }"
                                            />
                                </tree>
                            </field>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
    </data>
</openerp>