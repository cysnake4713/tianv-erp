<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_project_project_tree" model="ir.ui.view">
            <field name="name">view.tianv.project.project.tree</field>
            <field name="model">tianv.project.project</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="code"/>
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="product_id"/>
                    <field name="sign_date"/>
                    <field name="actual_finish_date"/>
                    <field name="partner_id"/>
                    <field name="contract_price"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_project_project_form" model="ir.ui.view">
            <field name="name">view.tianv.project.project.form</field>
            <field name="model">tianv.project.project</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="项目名称"/>
                            </h1>
                            <h2>
                                <field name="code" placeholder="项目编号"/>
                            </h2>
                        </div>
                        <group>
                            <group string="基本信息">
                                <field name="partner_id"/>
                                <field name="product_id"/>
                                <field name="order_id"/>
                                <field name="sign_date"/>
                                <field name="plan_finish_date"/>
                                <field name="actual_finish_date"/>
                            </group>
                            <group string="合同金额">
                                <field name="contract_price"/>
                                <field name="tax_id"/>
                                <field name="tax_price"/>
                                <field name="actual_price"/>
                            </group>
                        </group>
                        <group>
                            <group col="4">
                                <field name="template_id"/>
                                <button name="button_init_template" type="object" string="使用模板" confirm="会清除现有信息!"/>
                            </group>
                            <group class="oe_inline">
                            </group>
                        </group>
                        <group string="款项分配">
                            <field name="param_ids" nolabel="1">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="price"/>
                                </tree>
                            </field>
                        </group>
                        <group string="提成分配">
                            <div>
                                <button name="button_compute_record" type="object" string="再计算提成" confirm="会重新计算提成金额"/>
                            </div>
                            <newline/>
                            <field name="record_ids" nolabel="1" context="{'template_id': template_id}">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="template_line_id" domain="[('template_id','=',context.get('template_id'))]"/>
                                    <field name="type_id"/>
                                    <field name="adjustment" widget="percentage"/>
                                    <field name="price"/>
                                    <field name="comment"/>
                                    <field name="partner_id"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</openerp>