<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data noupdate="1">
        <record id="map_tianv_project" model="odoosoft.wechat.enterprise.map">
            <field name="code">tianv.project.project</field>
        </record>

        <record id="message_project_record" model="odoosoft.wechat.enterprise.message.template">
            <field name="name">项目任务提醒</field>
            <field name="title">项目任务提醒</field>
            <field name="content">
名称: ${object.name}
状态: ${fields['state'].convert_to_export(object.state, env)}
项目: ${object.project_id.name or ''}
客户名称:  ${object.partner_id.name or ''}
            </field>
        </record>

        <record model="ir.cron" id="project_record_cron">
            <field name="name">Project record Pass Plan Date reminder</field>
            <field name="interval_number">5</field>
            <field name="interval_type">work_days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="model" eval="'tianv.project.project.record'"/>
            <field name="function" eval="'cron_send_plan_warning'"/>
            <field name="args" eval="'()'" />
        </record>
    </data>
</openerp>