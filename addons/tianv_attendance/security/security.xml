<?xml version="1.0"?>
<openerp>
    <data noupdate="0">
        <record model="res.groups" id="group_attendance_manager">
            <field name="name">可以修改考勤计划,考勤记录</field>
            <field name="category_id" ref="base.module_category_attendance"/>
        </record>
        <record model="res.groups" id="group_attendance_admin">
            <field name="name">可以管理考勤后台数据</field>
            <field name="category_id" ref="base.module_category_attendance"/>
            <field name="implied_ids" eval="[(4, ref('tianv_attendance.group_attendance_manager'))]"/>
        </record>
    </data>

    <data noupdate="1">
        <record id="rule_tianv_hr_attendance_record_employee" model="ir.rule">
            <field name="name">员工只能看自己考勤记录</field>
            <field name="model_id" ref="model_tianv_hr_attendance_record"/>
            <field name="groups"
                   eval="[(6,0,[ref('base.group_user')])]"/>
            <field name="domain_force">[('contract.employee_id.user_id','=',user.id)]</field>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="rule_tianv_hr_attendance_record_admin" model="ir.rule">
            <field name="name">管理考勤记录</field>
            <field name="model_id" ref="model_tianv_hr_attendance_record"/>
            <field name="groups"
                   eval="[(6,0,[ref('tianv_attendance.group_attendance_manager')])]"/>
            <field name="domain_force">[(1,'=',1)]</field>
        </record>
    </data>
</openerp>

