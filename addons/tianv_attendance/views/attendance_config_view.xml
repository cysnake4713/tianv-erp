<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_tianv_attendance_config_tree" model="ir.ui.view">
            <field name="name">view.tianv.hr.attendance.config.tree</field>
            <field name="model">tianv.hr.attendance.config</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="allow_late_time"/>
                    <field name="allow_early_time"/>
                    <field name="allow_leave_time"/>
                </tree>
            </field>
        </record>

        <record id="view_tianv_attendance_config_form" model="ir.ui.view">
            <field name="name">view.tianv.hr.attendance.config.form</field>
            <field name="model">tianv.hr.attendance.config</field>
            <field name="arch" type="xml">
                <form>
                    <group col="4">
                        <field name="start_date"/>
                        <field name="end_date"/>
                    </group>
                    <group col="4">
                        <field name="allow_late_time"/>
                        <field name="allow_early_time"/>
                        <field name="allow_leave_time"/>
                    </group>
                    <field name="lines"/>
                </form>
            </field>
        </record>

        <record id="view_tianv_attendance_config_line_tree" model="ir.ui.view">
            <field name="name">view.tianv.hr.attendance.config.line.tree</field>
            <field name="model">tianv.hr.attendance.config.line</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="type"/>
                    <field name="start_time" widget="float_time"/>
                    <field name="end_time" widget="float_time"/>
                    <field name="allow_late_minute"/>
                    <field name="allow_early_minute"/>
                    <field name="start_punch_begin_time" widget="float_time"/>
                    <field name="start_punch_end_time" widget="float_time"/>
                    <field name="end_punch_begin_time" widget="float_time"/>
                    <field name="end_punch_end_time" widget="float_time"/>
                    <field name="work_time" readonly="1"/>
                </tree>
            </field>
        </record>

        <record id="view_tianv_attendance_config_type_tree" model="ir.ui.view">
            <field name="name">view.tianv.hr.attendance.config.type.tree</field>
            <field name="model">tianv.hr.attendance.config.type</field>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="name"/>
                </tree>
            </field>
        </record>
    </data>
</openerp>