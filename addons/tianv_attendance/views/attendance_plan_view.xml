<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_tianv_hr_attendance_plan_tree" model="ir.ui.view">
            <field name="name">view.tianv.hr.attendance.plan.tree</field>
            <field name="model">tianv.hr.attendance.plan</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="period"/>
                    <field name="min_hour"/>
                    <field name="legal_hour"/>
                    <field name="actual_hour"/>
                    <field name="holiday_date"/>
                </tree>
            </field>
        </record>

        <record id="view_tianv_hr_attendance_plan_search" model="ir.ui.view">
            <field name="name">view.tianv.hr.attendance.plan.search</field>
            <field name="model">tianv.hr.attendance.plan</field>
            <field name="arch" type="xml">
                <search>
                    <field name="period"/>
                    <field name="min_hour"/>
                    <field name="legal_hour"/>
                    <field name="actual_hour"/>
                    <field name="holiday_date"/>
                </search>
            </field>
        </record>

        <record id="view_tianv_hr_attendance_plan_form" model="ir.ui.view">
            <field name="name">view.tianv.hr.attendance.plan.form</field>
            <field name="model">tianv.hr.attendance.plan</field>
            <field name="priority">16</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="button_generate_plan" type="object" string="生成计划" confirm="会清除已有计划,请注意!" class="oe_highlight"
                                groups="tianv_attendance.group_attendance_manager"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="period"/>
                        </group>
                        <group>
                            <field name="holiday_date"/>
                            <field name="min_hour"/>
                            <field name="legal_hour"/>
                            <field name="actual_hour"/>
                        </group>
                        <separator string="排班"/>
                        <field name="lines"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_tianv_hr_attendance_plan_line_tree" model="ir.ui.view">
            <field name="name">view.tianv.hr.attendance.plan.line.tree</field>
            <field name="model">tianv.hr.attendance.plan.line</field>
            <field name="arch" type="xml">
                <tree editable="bottom" colors="green:plan_date_week in (5,6);red:hour&lt;7.5">
                    <field name="plan_date"/>
                    <field name="plan_date_week"/>
                    <field name="config_types" widget="many2many_tags"/>
                    <field name="hour"/>
                    <field name="comment"/>
                </tree>
            </field>
        </record>
    </data>
</openerp>