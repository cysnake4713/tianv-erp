<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_tianv_hr_attendance_record_tree" model="ir.ui.view">
            <field name="name">view.tianv.hr.attendance.record.tree</field>
            <field name="model">tianv.hr.attendance.record</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="employee"/>
                    <field name="period"/>
                    <field name="legal_hour"/>
                    <field name="min_hour"/>
                    <field name="actual_hour"/>
                </tree>
            </field>
        </record>

        <record id="view_tianv_hr_attendance_record_form" model="ir.ui.view">
            <field name="name">view.tianv.hr.attendance.record.form</field>
            <field name="model">tianv.hr.attendance.record</field>
            <field name="priority">16</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="button_generate_record" type="object" string="重新生成考勤记录" class="oe_highlight"
                                confirm="生成考勤记录会清除原有记录!"/>
                        <button name="button_clean" type="object" string="清除" confirm="会清除所有记录!"/>
                    </header>
                    <sheet>
                        <group col="4">
                            <field name="contract"/>
                            <field name="employee"/>
                            <field name="period"/>
                            <field name="plan" readonly="1"/>
                        </group>
                        <group>
                            <group>
                                <field name="holiday_date"/>
                                <field name="min_hour"/>
                                <field name="legal_hour"/>
                                <field name="plan_hour"/>
                                <field name="actual_hour"/>
                            </group>
                            <group>
                                <field name="late_time"/>
                                <field name="early_time"/>
                                <field name="absent_time"/>
                                <field name="leave_time"/>
                                <field name="sick_time"/>
                            </group>
                        </group>
                    </sheet>
                    <separator string="考勤记录"/>
                    <field name="lines"/>
                </form>
            </field>
        </record>

        <record id="view_tianv_hr_attendance_record_line_tree" model="ir.ui.view">
            <field name="name">view.tianv.hr.attendance.record.line.tree</field>
            <field name="model">tianv.hr.attendance.record.line</field>
            <field name="arch" type="xml">
                <tree editable="bottom" colors="red:adjust_hour&lt;plan_hour">
                    <field name="plan_date"/>
                    <field name="plan_date_week"/>
                    <field name="plan_hour"/>
                    <field name="record_hour" readonly="1"/>
                    <field name="adjust_hour"/>
                    <field name="tags" widget="many2many_tags" readonly="1"/>
                    <field name="adjust_tags" widget="many2many_tags"/>
                    <field name="comment"/>
                    <field name="plan_comment"/>
                    <button icon="gtk-find" help="考勤机记录" name="button_get_machine_record" type="object"/>
                </tree>
            </field>
        </record>
    </data>
</openerp>