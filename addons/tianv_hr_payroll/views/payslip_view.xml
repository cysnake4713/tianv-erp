<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="view_hr_payslip_form_inherit" model="ir.ui.view">
            <field name="name">view.hr.payslip.form.inherit</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
            <field name="priority">16</field>
            <field name="arch" type="xml">
                <xpath expr="//page[@string='Worked Days &amp; Inputs']" position="replace"/>
                <xpath expr="//page[@string='Details By Salary Rule Category']" position="after">
                    <page string="输入">
                        <separator string="输入"/>
                        <field name="input_line_ids" colspan="4" nolabel="1">
                            <tree string="Input Data" editable="bottom">
                                <field name="name"/>
                                <field name="code"/>
                                <field name="amount"/>
                                <field name="contract_id" invisible="1"/>
                                <field name="sequence" invisible="True"/>
                            </tree>
                            <form string="Payslip Line">
                                <group col="4">
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="payslip_id"/>
                                    <field name="sequence"/>
                                    <field name="amount"/>
                                    <field name="contract_id" invisible="1"/>
                                </group>
                            </form>
                        </field>
                    </page>
                </xpath>
                <xpath expr="//header" position="replace">
                    <header>
                        <button string="确认" name="hr_verify_sheet" states="draft" class="oe_highlight" groups="base.group_hr_manager"/>
                        <button string="计算" name="compute_sheet" type="object" states="draft,verify" class="oe_highlight"
                                groups="base.group_hr_manager"/>
                        <button string="员工确认" name="button_is_confirmed_sheet" type="object" class="oe_highlight" states="verify"/>
                        <button string="经理确认生效" name="button_verified" type="object" class="oe_highlight" states="verify,is_confirmed"
                                groups="base.group_hr_manager"/>
                        <button string="冲销" name="refund_sheet" states="confirm,done" type='object' groups="base.group_hr_manager"/>
                        <button string="设置为草稿" name="draft" states="cancel" groups="base.group_hr_manager"/>

                        <button string="取消" name="cancel_sheet" states="draft,hr_check,confirm,verify,is_confirmed" groups="base.group_hr_manager"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm"/>
                    </header>
                </xpath>
                <xpath expr="//sheet" position="after">
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </xpath>
                <xpath expr="//tree[@string='Salary Structure']" position="attributes">
                    <attribute name="colors">grey:total == 0; red:total&lt;0; blue:total&gt;0</attribute>
                </xpath>
                <xpath expr="//tree[@string='Payslip Lines']" position="attributes">
                    <attribute name="colors">grey:total == 0; red:total&lt;0; blue:total&gt;0</attribute>
                </xpath>
            </field>
        </record>

        <record id="view_hr_payslip_balance_view_tree" model="ir.ui.view">
            <field name="name">view.hr.payslip.balance.view.tree</field>
            <field name="model">hr.payslip.balance.view</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="employee"/>
                    <field name="contract"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="balance"/>
                </tree>
            </field>
        </record>

        <record id="view_hr_payslip_balance_view_search" model="ir.ui.view">
            <field name="name">view.hr.payslip.balance.view.search</field>
            <field name="model">hr.payslip.balance.view</field>
            <field name="arch" type="xml">
                <search>
                    <field name="employee"/>
                    <field name="contract"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="balance"/>
                    <group>
                        <filter string="雇员" name="by-employee" context="{'group_by':'employee'}"/>
                    </group>
                </search>
            </field>
        </record>
    </data>
</openerp>