<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="view_hr_payslip_form_inherit" model="ir.ui.view">
            <field name="name">view.hr.payslip.form.inherit</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
            <field name="priority">16</field>
            <field name="arch" type="xml">
                <xpath expr="//page[@string='Worked Days &amp; Inputs']" position="replace"/>
                <xpath expr="//header" position="replace">
                    <header>
                        <button string="确认" name="hr_verify_sheet" states="draft" class="oe_highlight" groups="base.group_hr_user"/>
                        <button string="计算" name="compute_sheet" type="object" states="draft,verify" class="oe_highlight"
                                groups="base.group_hr_user"/>
                        <button string="员工确认" name="button_is_confirmed_sheet" type="object" class="oe_highlight" states="verify"/>
                        <button string="经理确认生效" name="button_verified" type="object" class="oe_highlight" states="verify,is_confirmed"  groups="base.group_hr_manager"/>
                        <button string="冲销" name="refund_sheet" states="confirm,done" type='object' groups="base.group_hr_user"/>
                        <button string="设置为草稿" name="draft" states="cancel" groups="base.group_hr_user"/>

                        <button string="取消" name="cancel_sheet" states="draft,hr_check,confirm,verify,is_confirmed" groups="base.group_hr_user"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm"/>
                    </header>
                </xpath>
            </field>
        </record>
    </data>
</openerp>